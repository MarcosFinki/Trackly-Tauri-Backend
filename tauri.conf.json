{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Trackly",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "beforeDevCommand": "npm run dev --prefix trackly",
    "beforeBuildCommand": "npm run build --prefix trackly",
    "devUrl": "http://127.0.0.1:4321",
    "frontendDist": "../trackly/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Trackly",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
